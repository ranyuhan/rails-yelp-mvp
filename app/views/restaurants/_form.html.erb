
<%= simple_form_for (@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :category, collection: [ "chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.submit "submit" %>
  <% if @restaurant.errors.any? %>
    <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
    </ul>
  <% end %>
<% end %>
